{
  "name": "dbt MotherDuck Project",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "postCreateCommand": "pip install -r requirements.txt",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "innoverio.vscode-dbt-power-user" 
      ]
    }
  },
  
  "initializeCommand": "mkdir -p /root/.dbt && cp profiles.yml /root/.dbt/"
}
