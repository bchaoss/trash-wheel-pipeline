{
  "name": "Node + Python Feature",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-20-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && echo \"EVIDENCE_SOURCE__trash_wheel__token=${MOTHERDUCK_TOKEN}\" >> evidence_bi/.env",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "innoverio.vscode-dbt-power-user",
        "evidence.evidence-vscode",
        "svelte.svelte-vscode"
      ]
    }
  },
  "initializeCommand": "mkdir -p /root/dbt_pipeline/.dbt && cp dbt_pipeline/profiles.yml /root/dbt_pipeline/.dbt/ && cd evidence_bi/ && npm install && npm run sources"
}